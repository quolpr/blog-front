@require './../common.styl'

.blog-post {
  content-block();

  .header{
    .fa-trash{
      margin-left: 5px;
      color: #888888;
      font-size: 15px;
    }
  }
  .rdmore {
    text-align: right;
    margin-right: 10px;
    padding: 5px 5px 15px;
    a {
      font-size: 16px;
      background-color: #343434;
      padding: 10px 12px;
      border-radius: 5px;
      color: #FFF;
      shadow();
    }
  }

  .info {
    border-top: solid 1px #DFDFDF;
    padding: 20px;
    color: #888888;
    font-size: 12px;
    abbr {
      margin-left: 5px;
      margin-right: 5px;
    }

    .tag {
      display: inline;
      a {
        margin-left: 5px;
      }
    }
  }
}
