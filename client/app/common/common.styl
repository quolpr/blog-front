shadow() {
  box-shadow: rgba(0, 0, 0, 0.2) 0px 2px 1px 0px, rgba(0, 0, 0, 0.2) 0px -1px 0px 0px inset, rgba(255, 255, 255, 0.2) 0px 1px 0px 0px inset;
}

content-block() {
  shadow();

  background-color: #fff;
  border-radius: 3px;
  margin-bottom: 20px;

  .header {
    font-weight: 500;
    margin: 0px;
    padding: 15px 13px;
    border-bottom: solid 1px #DFDFDF;
    color: #666;
  }

  .body {
    margin: 15px;
    color: #000;
    font-size: 14px;
  }
}
